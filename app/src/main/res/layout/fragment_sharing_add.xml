<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.AddSharingFragment"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Chia sẻ phương tiện"
        android:textSize="24sp"
        android:textColor="@color/colorPrimary"
        android:layout_marginBottom="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thông tin cá nhân"
        android:textSize="16sp"
        android:textColor="@color/colorAccent"
        android:layout_marginBottom="10dp"/>

    <EditText
        android:id="@+id/et_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Tên"
        android:textSize="16sp"
        android:inputType="textCapWords"
        android:backgroundTint="@color/colorPrimaryDark"
        android:layout_marginBottom="10dp"/>

    <EditText
        android:id="@+id/et_phone_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Số điện thoại"
        android:textSize="16sp"
        android:inputType="phone"
        android:backgroundTint="@color/colorPrimaryDark"
        android:layout_marginBottom="10dp"/>

    <EditText
        android:id="@+id/et_start_position"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Vị trí bắt đầu đi"
        android:textSize="16sp"
        android:inputType="textCapWords"
        android:backgroundTint="@color/colorPrimaryDark"
        android:layout_marginBottom="10dp"/>

    <EditText
        android:id="@+id/et_end_position"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Vị trí đích"
        android:textSize="16sp"
        android:inputType="textCapWords"
        android:backgroundTint="@color/colorPrimaryDark"
        android:layout_marginBottom="10dp"/>
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Loại phương tiện"
        android:textSize="16sp"
        android:textColor="@color/colorAccent"
        android:layout_marginBottom="10dp"/>
    
    <Spinner
        android:id="@+id/spn_transport"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/bg_spinner"/>
    
    <Button
        android:id="@+id/btn_post_sharing"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="100dp"
        android:background="@drawable/bg_button"
        android:text="Đăng"
        android:textSize="17sp"
        android:textColor="@color/colorWhite"
        android:elevation="8dp" />

</LinearLayout>