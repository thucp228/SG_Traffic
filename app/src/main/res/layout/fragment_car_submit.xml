<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CarSubmitFragment"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Thông báo đi nhờ xe"
        android:textSize="27sp"
        android:textColor="@color/colorPrimary"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thông tin cá nhân"
        android:textSize="18sp"
        android:textColor="@color/colorAccent"
        android:layout_marginBottom="10dp"/>

    <EditText
        android:id="@+id/edtName"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Tên"
        android:inputType="textPersonName"
        android:backgroundTint="@color/colorPrimaryDark"
        android:layout_marginBottom="10dp" />

    <EditText
        android:id="@+id/edtPhone"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Số điện thoại"
        android:inputType="phone"
        android:backgroundTint="@color/colorPrimaryDark"
        android:layout_marginBottom="10dp"/>

    <EditText
        android:id="@+id/edtStartPos"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Vị trí bắt đầu đi"
        android:inputType="text"
        android:backgroundTint="@color/colorPrimaryDark"
        android:layout_marginBottom="10dp"/>

    <EditText
        android:id="@+id/edtEndPos"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Vị trí đích"
        android:inputType="text"
        android:backgroundTint="@color/colorPrimaryDark"
        android:layout_marginBottom="10dp"/>
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Loại xe"
        android:textSize="18sp"
        android:textColor="@color/colorAccent"
        android:layout_marginBottom="10dp"/>
    
    <Spinner
        android:id="@+id/spnType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"/>
    
    <Button
        android:id="@+id/btnSubmit2"
        android:layout_width="100dp"
        android:layout_height="45dp"
        android:layout_gravity="center_horizontal"
        android:background="@color/colorPrimary"
        android:text="OK"
        android:textSize="18sp"
        android:textColor="@color/colorWhite"
        android:elevation="5dp"/>

</LinearLayout>